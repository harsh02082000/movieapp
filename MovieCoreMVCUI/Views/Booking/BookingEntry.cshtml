
@{
    ViewData["Title"] = "BookingEntry";
}

@model BookMyShowEntity.Booking
<div>
    <hr />
    <a asp-controller="Booking" asp-action="Index">Booking Entry</a>
    <hr />
</div>
<form method="post" enctype="multipart/form-data">
    <h2>Booking Entry</h2><hr />
    <div class="form-group">
        <label>User Id</label>
        <input type="text" asp-for="UserId" class="form-control"
               placeholder="enter user id" required />
    </div>
    <div class="form-group">
        <label>ShowTiming Id</label>
        <input type="text" asp-for="ShowTimingId" class="form-control"
               placeholder="enter showtiming id" required />
    </div>
    <div class="form-group">
        <label>Booking Quantity</label>
        <input type="text" asp-for="BookingQuantity" class="form-control"
               placeholder="enter no of tickets" required />
    </div>
    <input type="submit" value="Save" class="btn btn-outline-success" />
    <input type="button" value="Reset" class="btn btn-outline-secondary" />
    <hr />
    @if (ViewBag.status == "Ok")
    {
        <div class="alert alert-success">
            @ViewBag.message
        </div>
    }
    else if (ViewBag.status == "Error")
    {
        <div class="alert alert-danger">
            @ViewBag.message
        </div>
    }
</form>

