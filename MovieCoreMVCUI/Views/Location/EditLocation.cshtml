
@{
    ViewData["Title"] = "EditLocation";
}
@model BookMyShowEntity.Location
<div>
    <hr />
    <a asp-controller="Location" asp-action="Index">Back to Index</a>
    <hr />
</div>
<h1>EditLocation</h1>
<hr/>
<form method="post" enctype="multipart/form-data">
    <h2>Location Edit</h2><hr />
    <div class="form-group">
        <label>Location Id</label>
        <input type="text" asp-for="Id" class="form-control"
               placeholder="enter location id" required />
    </div>
    <div class="form-group">
        <label>Theatre Id</label>
        <input type="text" asp-for="TheatreId" class="form-control"
               placeholder="enter theatre id" required />
    </div>
    <div class="form-group">
        <label>Theatre Place</label>
        <input type="text" asp-for="Place" class="form-control"
               placeholder="enter theatre place" required />
    </div>

    <input type="submit" value="Save" class="btn btn-outline-success" />
    <input type="button" value="Reset" class="btn btn-outline-secondary" />
    <hr />
    @if (ViewBag.status == "Ok")
    {
        <div class="alert alert-success">
            @ViewBag.message
        </div>
    }
    else if (ViewBag.status == "Error")
    {
        <div class="alert alert-danger">
            @ViewBag.message
        </div>
    }
</form>

