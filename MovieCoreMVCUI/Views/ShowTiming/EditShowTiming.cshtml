
@{
    ViewData["Title"] = "EditShowTiming";
}
@model BookMyShowEntity.ShowTiming
<div>
    <hr />
    <a asp-controller="ShowTiming" asp-action="Index">Back to Index</a>
    <hr />
</div>
<h1>EditShowTiming</h1>
<hr/>
<form method="post" enctype="multipart/form-data">
    <h2>ShowTiming Entry</h2><hr />
    <div class="form-group">
        <label>ShowTiming Id</label>
        <input type="text" asp-for="Id" class="form-control"
               placeholder="enter showTiming Id" required />
    </div>
    <div class="form-group">
        <label>Movie Id</label>
        <input type="text" asp-for="Movie" class="form-control"
               placeholder="enter movie Id " required />
    </div>
    <div class="form-group">
        <label>Theatre Id</label>
        <input type="text" asp-for="TheatreId" class="form-control"
               placeholder="enter theatre Id" required />
    </div>
    <div class="form-group">
        <label>Theatre ShowTime</label>
        <input type="datetime-local" asp-for="ShowTime" class="form-control"
               placeholder="enter theatre showtime" required />
    </div>
    <input type="submit" value="Save" class="btn btn-outline-success" />
    <input type="button" value="Reset" class="btn btn-outline-secondary" />
    <hr />
    @if (ViewBag.status == "Ok")
    {
        <div class="alert alert-success">
            @ViewBag.message
        </div>
    }
    else if (ViewBag.status == "Error")
    {
        <div class="alert alert-danger">
            @ViewBag.message
        </div>
    }
</form>
