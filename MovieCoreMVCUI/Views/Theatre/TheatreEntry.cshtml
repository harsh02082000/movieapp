
@{
    ViewData["Title"] = "TheatreEntry";
}
@model BookMyShowEntity.Theatre
<div>
    <hr />
    <a asp-controller="Theatre" asp-action="Index">Theatre Entry</a>
    <hr />
</div>
<form method="post" enctype="multipart/form-data">
    <h2>Theatre Entry</h2><hr />
    <div class="form-group">
        <label>Theatre Name</label>
        <input type="text" asp-for="Name" class="form-control"
               placeholder="enter theatre name" required />
    </div>
    <div class="form-group">
        <label>Theatre Address</label>
        <input type="text" asp-for="Address" class="form-control"
               placeholder="enter theatre address" required />
    </div>
    <div class="form-group">
        <label>Theatre Comment</label>
        <input type="text" asp-for="Comments" class="form-control"
               placeholder="enter theatre comments" required />
    </div>
    <input type="submit" value="Save" class="btn btn-outline-success" />
    <input type="button" value="Reset" class="btn btn-outline-secondary" />
    <hr />
    @if (ViewBag.status == "Ok")
    {
        <div class="alert alert-success">
            @ViewBag.message
        </div>
    }
    else if (ViewBag.status == "Error")
    {
        <div class="alert alert-danger">
            @ViewBag.message
        </div>
    }
</form>
