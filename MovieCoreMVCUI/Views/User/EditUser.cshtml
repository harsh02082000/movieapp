
@{
    ViewData["Title"] = "EditUser";
}
@model BookMyShowEntity.User
<div>
    <hr />
    <a asp-controller="User" asp-action="Index">Back to Index</a>
    <hr />
</div>
<h1>EditUser</h1>
<hr/>
<form method="post" enctype="multipart/form-data">
    <h2>User Edit</h2><hr />
    <div class="form-group">
        <label>User Id</label>
        <input type="text" asp-for="Id" class="form-control"
               placeholder="enter user id" required />
    </div>
    <div class="form-group">
        <label>User Name</label>
        <input type="text" asp-for="Name" class="form-control"
               placeholder="enter user name" required />
    </div>
    <div class="form-group">
        <label>User Email</label>
        <input type="text" asp-for="Email" class="form-control"
               placeholder="enter user email" required />
    </div>
    <div class="form-group">
        <label>User Password</label>
        <input type="text" asp-for="Password" class="form-control"
               placeholder="enter user password" required />
    </div>
    <input type="submit" value="Save" class="btn btn-outline-success" />
    <input type="button" value="Reset" class="btn btn-outline-secondary" />
    <hr />
    @if (ViewBag.status == "Ok")
    {
        <div class="alert alert-success">
            @ViewBag.message
        </div>
    }
    else if (ViewBag.status == "Error")
    {
        <div class="alert alert-danger">
            @ViewBag.message
        </div>
    }
</form>


